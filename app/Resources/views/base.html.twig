<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Warhammer Age of Sigmar units">
        <meta name="author" content="Tim Bauer">
        <title>{% block title %}Welcome to Tyger's Hammer!{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href={{ asset('css/bootstrap/bootstrap.css') }} >
            <link rel="stylesheet" href={{ asset('css/main.css') }} >
            <link rel="stylesheet" href="{{ asset('css/font-awesome-4.7.0/css/font-awesome.min.css') }}">
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
        <div class="container">
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="{{ path('homepage') }}">Home<span class="sr-only">(current)</span></a></li>
                            <li><a href="{{ path('list_units') }}">View Units</a></li>
                            <li><a href="{{ path('under_construction') }}">Build New Army</a></li>
                            <li><a href="{{ path('under_construction') }}">View Saved Army</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('list_weapons') }}">Manage Weapons</a></li>

                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                       aria-haspopup="true" aria-expanded="false">
                                            Manage Entities
                                            <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('list_units') }}">Units</a></li>
                                        {#<li><a href="{{ path('faction_index') }}">Factions</a></li>#}
                                        <li><a href="{{ path('list_weapons') }}">Weapons</a></li>
                                        {#<li><a href="{{ path('mount_index') }}">Mounts</a></li>#}
                                        <li role="separator" class="divider"></li>
                                        <li><a href="{{ path('list_unitAbilities') }}">Abilities</a></li>
                                        {#<li><a href="{{ path('spell_index') }}">Spells</a></li>#}
                                        <li role="separator" class="divider"></li>
                                        {#<li><a href="{{ path('pitchedBattleRules_index') }}">Pitched Battle Rules</a></li>#}
                                        {#<li><a href="{{ path('battlefieldrole_index') }}">Battlefield Roles</a></li>#}
                                        {#<li><a href="{{ path('keyword_index') }}">Keywords</a></li>#}
                                        {#<li><a href="{{ path('warscrollbattalion_index') }}">Warscroll Battalions</a></li>#}
                                    </ul>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <li><a href="{{ path('under_construction') }}">Manage Users</a></li>
                            {% endif %}
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            {% if is_granted('ROLE_USER')%}
                                <form method="link" action="{{ path('security_logout') }}">
                                    <button type="submit" class="btn btn-default navbar-btn">Sign out</button>
                                </form>
                            {% else %}
                                <li><a href="{{ path('user_register') }}">Register  </a></li>
                                <li>
                                    <form method="link" action="{{ path('security_login') }}">
                                        <button type="submit" class="btn btn-default navbar-btn">Sign in</button>
                                    </form>
                                </li>
                            {% endif %}
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
            <div class="page-header">
                <h1 class="page-header-text">Tyger's Hammer
                    <br><small>Your one stop resource for Warhammer Age of Sigmar unit stat comparison</small>
                </h1>
            </div> <!-- end "page-header" -->


        </div><!-- end "container" -->
    <body>
        {% block body %}
        {% endblock %}
    </body>
        {% block javascripts %}
            <script src={{ asset('js/jquery-3.1.1.min.js') }}></script>
            <script src= {{ asset('js/bootstrap.min.js') }}></script>
            <script src={{ asset('js/carousel.js') }}></script>
        {% endblock %}

</html>
