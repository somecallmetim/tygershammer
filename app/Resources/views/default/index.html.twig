{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <!-- source code for carousel comes from the following two links
                        http://bootsnipp.com/snippets/featured/carousel-static-headline-caption
                        http://bootsnipp.com/snippets/featured/carousel-extended-320-compatible
                    -->
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>


                        <div class="carousel-inner">

                            <div class="item active">
                                <img src="images/order_archers.jpg" class="carousel-image" alt="Stormcast Elemental Archers">
                                <div class="carousel-caption">
                                    <h3 class="text-shadow">From the forces of order...</h3>
                                    <p class="text-shadow">Stormcast Elemental Archers</p>
                                </div>
                            </div><!-- end "item" -->

                            <div class="item">
                                <img src="images/chaos_units.jpg" class="carousel-image" alt="Chaos Blood Warriors">
                                <div class="carousel-caption">
                                    <h3 class="text-shadow">To those of chaos...</h3>
                                    <p class="text-shadow">Chaos Blood Warriors</p>
                                </div>
                            </div><!-- end "item" -->

                            <div class="item">
                                <img src="images/orcs-and-goblins.jpg" class="carousel-image" alt="Warhammer Orcs and Goblins">
                                <div class="carousel-caption">
                                    <h3 class="text-shadow">And everything in between!</h3>
                                    <p class="text-shadow">Orcs and Goblins</p>
                                </div>
                            </div><!-- end "item" -->
                        </div><!-- end "carousel-inner" -->


                        <div class="side-arrows">
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>

                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div><!-- end "side-arrows" -->
                    </div><!-- end "carousel-example-generic" -->

                    <div class="main-text hidden-xs">
                        <div class="col-md-10 col-md-offset-1 text-center">
                            <h1 class="text-shadow">Welcome to Tyger's Hammer!</h1>
                            <h4 class="text-shadow">We compare ALL the unit stats in the game so YOU DON'T HAVE TO!!!</h4>
                        </div><!-- end col offset -->
                    </div><!-- end "main-text" -->

                </div><!-- end "col-md-10" -->
            </div><!--end "row" -->
            <div id="push">
            </div>
        </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
