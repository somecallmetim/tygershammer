{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Spellentity</h1>

        <table>
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spellEntity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ spellEntity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ spellEntity.description }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('spell_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('spell_edit', { 'id': spellEntity.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
