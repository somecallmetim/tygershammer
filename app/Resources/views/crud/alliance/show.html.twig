{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Alliance</h1>

        <table>
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alliance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ alliance.name }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('alliance_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('alliance_edit', { 'id': alliance.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
