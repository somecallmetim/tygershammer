{% extends 'base.html.twig' %}

{% block body %}
    <div class="container col-xs-offset-1 col-xs-2">
        <ul class="list-group">
            {% for weapon in weapons %}
                <li class="list-group-item">
                    <a href="{{ path('weapon_show', {'weaponName': weapon.weaponName}) }}">{{ weapon.weaponName }}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('weapon_edit', {'weaponName': weapon.weaponName}) }}" class="btn btn-xs btn-success pull-right">
                            <span class="fa fa-pencil"></span></a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}