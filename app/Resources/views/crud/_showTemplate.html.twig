{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="container unit-table-container">
            <h2 class="text-center">{{ entity.name }}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path(routes['edit'], {'name': entity.name}) }}" class="btn btn-xs btn-success">
                        <span class="fa fa-pencil"></span>
                    </a>
                    <a href="{{ path(routes['delete'], {'id': entity.id}) }}" class="btn btn-xs btn-danger">
                        <span class="fa fa-close"></span>
                    </a>
                {% endif %}
            </h2>

            <table class="table table-bordered table-responsive text-center">
                <tr>
                    <th class="text-center">Description</th>
                    <th class="text-center">Value</th>
                </tr>
                {% for key, value in attributes %}
                    <tr>
                        <td>{{ key }}</td>
                        <td>{{ value }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/entity_table.css') }}">
{% endblock %}